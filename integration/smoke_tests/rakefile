require 'rake'
require 'rspec/core/rake_task'

task :smoke_test, :host do |t, args|
  `mysql -u root < ../../web/src/db/schema.sql`
  `mysql -u root < ../../web/src/db/seed.sql`
  `mysql -u root < db/seed_for_test.sql`
  RSpec::Core::RakeTask.new(:spec)
  ENV['HOST'] = args[:host]
  Rake::Task["spec"].invoke
end

