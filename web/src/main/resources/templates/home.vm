#set($pageTitle = 'My swaps')

#foreach($month in $months)
<table>
    <caption class="h1"><span class="secondary-text">You / </span>$month <a href="/swap">create swap</a></caption>
    <thead class="hidden">
    <tr>
        <th scope=col>Date</th>
        <th scope=col>Shift</th>
        <th scope=col>Status</th>
    </tr>
    </thead>
    <tbody>
    #if(!$swaps[$month])
        <tr>
            <td colspan="3">No swaps</td>
        </tr>
    #end
    #foreach($swap in $swaps[$month])
    <tr>
        <td><span class="h3">$swap.fromDate.dayOfMonth</span> <span class="secondary-text">$display.day($swap.fromDate)</span></td>
        <td>$swap.fromShift</td>
        <td class="secondary-text">You&apos;ve requested a swap</td>
    </tr>
    #end
    </tbody>
</table>
#end
